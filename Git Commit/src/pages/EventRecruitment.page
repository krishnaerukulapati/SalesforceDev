<apex:page standardcontroller="Lead" tabstyle="Lead">
 
    <style>
   .colstyle {width:50%}
    </style>

<apex:form >
    <apex:sectionheader title="Event Recruitment" subtitle="{!if(Lead.Id==null,'New Event',Lead.Name)}"></apex:sectionheader>
       <apex:pageblock mode="edit" id="eventrecrutPB" title="Event Recruitment Entry">
   
       <apex:pageblockbuttons >
            <apex:commandbutton immediate="true" action="{!save}" value="Save"></apex:commandbutton>
            <apex:commandbutton immediate="true" action="{!cancel}" value="Cancel"></apex:commandbutton>
        </apex:pageblockbuttons>
    
     <apex:pagemessages ></apex:pagemessages>  <!-- displays all message generated by the component -->
     
     <apex:panelGrid columns="2" id="Grid" width="100%" columnClasses="colstyle">
        <apex:pageblocksection id="EventInfoPBS" title=" ">
        </apex:pageblocksection>
     </apex:panelGrid>
     
     
  <apex:panelGrid columns="2" id="theGrid1" width="100%" columnClasses="colstyle">
    <apex:pageblocksection id="Constituents" title="Constituents">
       <apex:inputfield value="{!Lead.Organizer__c}"></apex:inputfield>
        <br></br>        
        <apex:inputfield value="{!Lead.Coordinator__c}"></apex:inputfield>
       
    </apex:pageblocksection>
        
    <apex:pageblocksection id="ContactInformation" title="Contact Information">
        <apex:inputfield value="{!Lead.Phone}"></apex:inputfield>
        <br></br>
        <apex:inputfield value="{!Lead.Email}"></apex:inputfield>
    </apex:pageblocksection>
  
    
    <apex:pageblocksection id="EventInformationPBS" title="Event Information">
        <apex:inputfield value="{!Lead.Event_Type__c}"></apex:inputfield>
        <br></br>
        <apex:inputfield value="{!Lead.Description}"></apex:inputfield>
    </apex:pageblocksection>
 
  <apex:pageblocksection id="EventDatesPBS" title="Event Dates">
    <apex:inputfield value="{!Lead.Event_Start_Date__c}"></apex:inputfield>
        <apex:inputfield value="{!Lead.Fiscal_Year__c}"></apex:inputfield>
        <apex:inputfield value="{!Lead.Event_End_Date__c}"></apex:inputfield>
    </apex:pageblocksection>
 
    <apex:pageblocksection id="ParticipantsPBS" title="Participants">
        <apex:inputfield value="{!Lead.Expected_Participants__c}"></apex:inputfield>
        <br></br>
        <apex:inputfield value="{!Lead.Material_Language__c}"></apex:inputfield>
    </apex:pageblocksection>
 
    <apex:pageblocksection id="ShipPBS" title="Ship Kit To:">
        <apex:inputField value="{!Lead.Street}" />
        <br></br>
        <apex:inputField value="{!Lead.City}" />
        <br></br>
        <apex:inputField value="{!Lead.State}" />
        <br></br>
        <apex:inputField value="{!Lead.PostalCode}" />
        <br></br>
        <apex:inputField value="{!Lead.Country}" />
        
    </apex:pageblocksection>
  </apex:panelGrid>

 
    </apex:pageblock>
  </apex:form>
 </apex:page>